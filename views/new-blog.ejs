<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <title>Blog</title>
  </head>

  <body>
    <%- include('partials/header.ejs') %>
    <div class="main-new-blog container mt-5">
      <h2>Новый блог</h2>
      <form
        class="mt-3"
        action=""
      >
        <div class="mb-3">
          <label
            for="title"
            class="form-label"
            >Title</label
          >
          <input
            type="email"
            class="form-control form-control-lg"
            id="title"
            placeholder="Введите заголовок блога"
          />
        </div>
        <div class="mb-3">
          <select
            class="form-select form-select-lg"
            aria-label="Default select example"
          >
            <% categories.forEach(category => { %>
            <option selected><%= category.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-3">
          <label
            for="formFile"
            class="form-label"
            >Выберите картинку</label
          >

          <input
            type="file"
            name="image"
            class="form-control form-control-lg"
          />
        </div>
        <div class="mb-3">
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            rows="3"
          >
Введите описание блога</textarea
          >
        </div>

        <button class="btn accent-btn">Создать</button>
      </form>
    </div>
  </body>
</html>
